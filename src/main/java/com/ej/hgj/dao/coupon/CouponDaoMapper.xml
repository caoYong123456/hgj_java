<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ej.hgj.dao.coupon.CouponDaoMapper">

    <resultMap id="BaseMap" type="com.ej.hgj.entity.coupon.Coupon">
        <result column="id" jdbcType="VARCHAR" property="id"/>
        <result column="title" jdbcType="VARCHAR" property="title"/>
        <result column="cou_num" jdbcType="INTEGER" property="couNum"/>
        <result column="is_exp" jdbcType="INTEGER" property="isExp"/>
        <result column="type_code" jdbcType="VARCHAR" property="typeCode"/>
        <result column="type_name" jdbcType="VARCHAR" property="typeName"/>
        <result column="desc" jdbcType="VARCHAR" property="desc"/>
        <result column="create_by" jdbcType="VARCHAR" property="createBy"/>
        <result column="update_by" jdbcType="VARCHAR" property="updateBy"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
        <result column="delete_flag" jdbcType="INTEGER" property="deleteFlag"/>
    </resultMap>
    <sql id="Base_Column_List" >
        id, title, cou_num, is_exp, type_code, `desc`, create_time, update_time, create_by,
        update_by, delete_flag
    </sql>

    <!-- 根据主键查询-->
    <select id="getById" resultMap="BaseMap" parameterType="java.lang.String" >
        select
            <include refid="Base_Column_List" />
        from t_stop_coupon
        where id = #{id}
    </select>

    <!-- 查询列表-->
    <select id="getList" resultMap="BaseMap"  parameterType="com.ej.hgj.entity.coupon.Coupon">
        select
        c.*,t.type_name
        from t_coupon c left join t_coupon_type t on c.type_code = t.type_code
        where c.delete_flag = 0
        <if test="typeCode != null">
            and c.type_code like CONCAT('%', #{typeCode,jdbcType=VARCHAR},'%') ESCAPE '/'
        </if>
        <if test="typeName != null">
            and t.type_name like CONCAT('%', #{typeName,jdbcType=VARCHAR},'%') ESCAPE '/'
        </if>
        order by c.update_time desc
    </select>

    <!-- 保存-->
    <insert id="save" parameterType="com.ej.hgj.entity.coupon.Coupon" >
        insert into  t_coupon(
        <if test="id != null">
            id,
        </if>
        <if test="title != null">
            title,
        </if>
        <if test="couNum != null">
            cou_num,
        </if>
        <if test="isExp != null">
            is_exp,
        </if>
        <if test="typeCode != null">
            type_code,
        </if>
        <if test="desc != null">
            `desc`,
        </if>
        <if test="createTime != null">
            create_time,
        </if>
        <if test="createBy != null">
            create_by,
        </if>
        <if test="updateTime != null">
            update_time,
        </if>
        <if test="updateBy != null">
            update_by,
        </if>
        <if test="deleteFlag != null">
            delete_flag
        </if>
        )
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="id != null" >
                #{id,jdbcType=VARCHAR},
            </if>
            <if test="title != null" >
                #{title,jdbcType=VARCHAR},
            </if>
            <if test="couNum != null" >
                #{couNum,jdbcType=INTEGER},
            </if>
            <if test="isExp != null" >
                #{isExp,jdbcType=INTEGER},
            </if>
            <if test="typeCode != null" >
                #{typeCode,jdbcType=VARCHAR},
            </if>
            <if test="desc != null" >
                #{desc,jdbcType=VARCHAR},
            </if>
            <if test="createTime != null">
                #{createTime,jdbcType=TIMESTAMP},
            </if>
            <if test="createBy != null">
                #{createBy,jdbcType=VARCHAR},
            </if>
            <if test="updateTime != null">
                #{updateTime,jdbcType=TIMESTAMP},
            </if>
            <if test="updateBy != null">
                #{updateBy,jdbcType=VARCHAR},
            </if>
            <if test="deleteFlag != null">
                #{deleteFlag,jdbcType=INTEGER}
            </if>
        </trim>
    </insert>

    <!-- 更新-->
    <update id="update" parameterType="com.ej.hgj.entity.coupon.Coupon" >
        update
        t_coupon
        <set>
            <if test="title != null">
                title = #{title,jdbcType=VARCHAR},
            </if>
            <if test="couNum != null">
                cou_num = #{couNum,jdbcType=INTEGER},
            </if>
            <if test="isExp != null">
                is_exp = #{isExp,jdbcType=INTEGER},
            </if>
            <if test="typeCode != null">
                type_code = #{typeCode,jdbcType=VARCHAR},
            </if>
            <if test="desc != null">
                `desc` = #{desc,jdbcType=VARCHAR},
            </if>
            <if test="updateBy != null">
                update_by = #{updateBy,jdbcType=VARCHAR},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime,jdbcType=TIMESTAMP},
            </if>
        </set>
        where id=#{id,jdbcType=VARCHAR}
    </update>

    <!-- 删除-->
    <update id="delete" parameterType="java.lang.String" >
        delete from t_coupon where id=#{id}
    </update>

</mapper>
